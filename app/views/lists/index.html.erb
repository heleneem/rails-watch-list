<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://conwayyao.com/wp-content/uploads/2015/07/posters-compilation.jpg)">
  List
</div>


<div class="card-container">
  <% @lists.each do |list| %>
    <div class="card-product">
        <% if list.photo.attached? %>
          <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
        <% else %>
          <p>No photo</p>
        <% end %>
        <div class="card-product-infos">
          <%= link_to list.name, list_path(list) %>
        </div>
    </div>
  <% end %>
</div>
  <div class="text-center mt-4 mb-4" >
  <%= link_to "Add a New list", new_list_path, class: "btn btn-warning" %>
  </div>

  <div class="footer">
  <div class="footer-links">
  </div>
  <div class="footer-copyright">
    Movies.com 
  </div>
</div>
